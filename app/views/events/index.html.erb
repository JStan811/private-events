<h1>Events</h1>

<ul>
  <% @events.each do |event| %>
    <li>
      <a href="/events/<%= event.id %>">
        <%= event.title %>
      </a>
    </li>
  <% end %>
</ul>

<% if !user_signed_in? %>
  <%= button_to "login", new_user_session_path, method: :get  %>
<% end %>

<% if user_signed_in? %>
  <%= button_to "create event", new_event_path, method: :get  %>
  <%= button_to "logout", destroy_user_session_path, method: :delete  %>
<% end %>

<%= button_to "see all users", users_path, method: :get  %>
