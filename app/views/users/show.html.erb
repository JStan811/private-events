<h1><%= @user.username %></h1>

<p>Email: <%= @user.email %></p>

<h2>Created Events:</h2>
<ul>
  <% @created_events.each do |event| %>
    <li>
      <a href="/events/<%= event.id %>">
        <%= event.title %>
      </a>
      - <%= event.date %>
    </li>
  <% end %>
</ul>

<h2>Attended Events:</h2>
<p>Upcoming: </p>
<ul>
  <% @user.attended_events.where('date > ?', Time.now).each do |event| %>
    <li>
      <a href="/events/<%= event.id %>">
        <%= event.title %>
      </a>
      - <%= event.date %>
    </li>
  <% end %>
</ul>
<p>Past: </p>
<ul>
  <% @user.attended_events.where('date <= ?', Time.now).each do |event| %>
    <li>
      <a href="/events/<%= event.id %>">
        <%= event.title %>
      </a>
      - <%= event.date %>
    </li>
  <% end %>
</ul>
